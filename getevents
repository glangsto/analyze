#!/bin/bash
# Script to transfer events from the data computers to this host
# HISTORY
# 19JUN12 GIL initial version
# find the most recent note file 

export archivehome=~/archive

if [ -z "$1" ]
then
    echo "getevents: Get latest events from a remote host"
    echo "usage: getevents <datahost> <datadir> <datauser>"
    echo "where datahost  name or ip address of the data taking computer"
    echo "where datadir   local name of the data directory where data is copied"
    echo "where datauser  login name on remote computer"
    echo "for example:"
    echo "getevents 192.168.1.201 pi1 pi [source-dir]"
    echo ""
    echo "To get data from computer 192.168.1.201, put in directory pi1"
    echo "login id is pi for a raspberry pi"
    echo "optionally set the source directory name"
    echo "default source-dir=events"
    echo ""
    exit -1
else
    export datahost=$1
fi

if [ -z "$2" ]
then
    export datadir=pi1
else
    export datadir=$2
fi    

if [ -z "$3" ]
then
    export datauser=pi
else
    export datauser=$3
fi    

if [ -z "$4" ]
then
    export sourcedir=events
else
    export sourcedir=$4
fi    

echo $datahost $datadir $datauser


if [ ! -d "$archivehome" ] 
then
    mkdir $archivehome
fi
cd $archivehome

export today=`date +%y%b%d`
echo "Today: " $today

export datadir=$datadir"-events-"$today
echo $datadir
if [ ! -d "./$datadir" ] 
then
    mkdir ./$datadir
fi
cd $datadir

# rsync -ruval --ignore-existing --dry-run --remove-source-files $datauser@$datahost:Research/gr-radio_astro/events/ ./

rsync -ruval --ignore-existing --remove-source-files $datauser@$datahost:Research/gr-radio_astro/$sourcedir/ ./

